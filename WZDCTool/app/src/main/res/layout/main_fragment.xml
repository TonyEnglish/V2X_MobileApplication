<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment"
    android:background="@color/background">

    <ImageButton
        android:id="@+id/help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_help_24"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Zone Data Collection Tool"
            android:textColor="@color/text"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="50sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:gravity="center"/>

        <Button
            android:id="@+id/downloadConfigButton"
            android:layout_width="300sp"
            android:layout_height="66dp"
            android:backgroundTint="@color/colorAccent"
            android:drawableLeft="@drawable/ic_down_arrow_small"
            android:text="Download Configuration Files"
            android:enabled="false"
            android:textColor="@color/button_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/uploadbutton"
            android:layout_width="300sp"
            android:layout_height="66dp"
            android:backgroundTint="@color/colorAccent"
            android:drawableLeft="@drawable/ic_up_arrow_small"
            android:text="Upload Data Files"
            android:visibility="visible"
            android:enabled="false"
            android:textColor="@color/button_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/createMapButton"
            android:layout_width="300sp"
            android:layout_height="66dp"
            android:backgroundTint="@color/colorAccent"
            android:drawableLeft="@drawable/ic_construction_worker"
            android:enabled="false"
            android:text="Map Work Zone"
            android:textColor="@color/button_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/viewMapButton"
            android:layout_width="300sp"
            android:layout_height="66dp"
            android:backgroundTint="@color/colorAccent"
            android:drawableLeft="@drawable/ic_baseline_pin_drop_24"
            android:text="View Work Zone"
            android:textColor="@color/button_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="300sp"
            android:layout_height="66dp"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginBottom="10sp"
            android:drawableLeft="@drawable/ic_baseline_settings_24"
            android:text="Settings"
            android:textColor="@color/button_text"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>