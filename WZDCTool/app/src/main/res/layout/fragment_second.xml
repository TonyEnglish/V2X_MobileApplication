<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment2_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/button_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alpha="0.7"
        android:background="#FFFFFF"
        android:backgroundTint="@color/background"
        android:orientation="vertical">

        <!-- Layout for lane UI components -->
        <LinearLayout
            android:id="@+id/lanes_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Lane 1 -->
            <LinearLayout
                android:id="@+id/lane1_ll"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lane1textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Lane 1"
                    android:textAlignment="center"
                    android:textColor="@color/text" />

                <TextView
                    android:id="@+id/lane1status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/status_open"
                    android:textAlignment="center"
                    android:textColor="@color/status_open"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/lane1btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:enabled="false"
                    android:text="ToggleButton"
                    android:textColor="@color/button_text"
                    android:textOff="CLOSE"
                    android:textOn="OPEN" />
            </LinearLayout>

            <ImageView
                android:id="@+id/laneLine1_2"
                android:layout_width="5dp"
                android:layout_height="80dp"
                android:src="@drawable/verticalline_thin_short" />

            <!-- Lane 2 -->
            <LinearLayout
                android:id="@+id/lane2_ll"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lane2textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Lane 2"
                    android:textAlignment="center"
                    android:textColor="@color/text" />

                <TextView
                    android:id="@+id/lane2status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/status_open"
                    android:textAlignment="center"
                    android:textColor="@color/status_open"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/lane2btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:enabled="false"
                    android:text="ToggleButton"
                    android:textColor="@color/button_text"
                    android:textOff="CLOSE"
                    android:textOn="OPEN" />
            </LinearLayout>

            <ImageView
                android:id="@+id/laneLine2_3"
                android:layout_width="5dp"
                android:layout_height="80dp"
                android:src="@drawable/verticalline_thin_short" />

            <!-- Lane 3 -->
            <LinearLayout
                android:id="@+id/lane3_ll"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lane3textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Lane 3"
                    android:textAlignment="center"
                    android:textColor="@color/text" />

                <TextView
                    android:id="@+id/lane3status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/status_open"
                    android:textAlignment="center"
                    android:textColor="@color/status_open"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/lane3btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:enabled="false"
                    android:text="ToggleButton"
                    android:textColor="@color/button_text"
                    android:textOff="CLOSE"
                    android:textOn="OPEN" />
            </LinearLayout>

            <ImageView
                android:id="@+id/laneLine3_4"
                android:layout_width="5dp"
                android:layout_height="80dp"
                android:src="@drawable/verticalline_thin_short" />

            <!-- Lane 4 -->
            <LinearLayout
                android:id="@+id/lane4_ll"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lane4textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Lane 4"
                    android:textAlignment="center"
                    android:textColor="@color/text" />

                <TextView
                    android:id="@+id/lane4status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/status_open"
                    android:textAlignment="center"
                    android:textColor="@color/status_open"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/lane4btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:enabled="false"
                    android:text="ToggleButton"
                    android:textColor="@color/button_text"
                    android:textOff="CLOSE"
                    android:textOn="OPEN" />
            </LinearLayout>

        </LinearLayout>

        <!-- Workers Present Button -->
        <ToggleButton
            android:id="@+id/wp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorAccent"
            android:enabled="false"
            android:textColor="@color/button_text"
            android:textOff="Workers not Present"
            android:textOn="Workers Present" />

        <!-- Manual buttons -->
        <LinearLayout
            android:id="@+id/manual_buttons_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/startBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:backgroundTint="@color/colorAccent"
                android:text="Start Data Collection"
                android:textColor="@color/button_text" />

            <Button
                android:id="@+id/ref"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:backgroundTint="@color/colorAccent"
                android:enabled="false"
                android:text="Mark Reference Point"
                android:textColor="@color/button_text" />

            <Button
                android:id="@+id/endBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:backgroundTint="@color/colorAccent"
                android:enabled="false"
                android:text="Stop Data Collection"
                android:textColor="@color/button_text" />

        </LinearLayout>

    </LinearLayout>

    <!-- Unused lane UI components, not incorporated into LL yet -->
    <ToggleButton
        android:id="@+id/lane5btn"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:enabled="false"
        android:text="ToggleButton"
        android:textOff="Lane 5 Open"
        android:textOn="Lane 5 Closed"
        android:visibility="gone" />

    <ToggleButton
        android:id="@+id/lane6btn"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:enabled="false"
        android:text="ToggleButton"
        android:textOff="Lane 6 Open"
        android:textOn="Lane 6 Closed"
        android:visibility="gone" />

    <ToggleButton
        android:id="@+id/lane7btn"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:enabled="false"
        android:text="ToggleButton"
        android:textOff="Lane 7 Open"
        android:textOn="Lane 7 Closed"
        android:visibility="gone" />

    <ToggleButton
        android:id="@+id/lane8btn"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:enabled="false"
        android:text="ToggleButton"
        android:textOff="Lane 8 Open"
        android:textOn="Lane 8 Closed"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/carImageView"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/text"
        android:backgroundTintMode="multiply"
        android:src="@drawable/caricon" />

</RelativeLayout>